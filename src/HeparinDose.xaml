<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRRT_Calculator.HeparinDose">
	<ScrollView>
		<StackLayout Margin="20">

            <Label Text="Heparin Dose Worksheet" FontSize="25" Margin="0,30,0,10" HorizontalOptions="Center" TextColor="White" />


            <Label x:Name="hep10Label" Margin ="0,10,0,0" TextColor="LightBlue"/>
            <Label x:Name="hep20Label" TextColor="LightBlue"/>
            <Label x:Name="hep30Label" TextColor="LightBlue"/>
            
            <Label Text="Pre-ACT" Margin="0,20,0,0"/>
            <Entry x:Name="preACTEntry" Margin="0,5,0,0"/>


            <Label Text="Pre-PTT" Margin="0,20,0,0"/>
            <Entry x:Name="prePTTEntry" Margin="0,5,0,0"/>

            <Button Text="Calculate" Clicked="OnCalculateClicked" Margin="0,25,0,0"/>


            <Label x:Name="bolusACTLabel" Margin ="0,10,0,0" TextColor="GreenYellow"/>
            <Label x:Name="bolusPTTLabel" TextColor="GreenYellow"/> 


        </StackLayout>
	</ScrollView>
</ContentPage>
