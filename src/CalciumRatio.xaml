<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRRT_Calculator.CalciumRatio">
    <StackLayout Margin="20">

        <Label Text="*Only to be used in patients on citrate anticoagulation" HorizontalOptions="Center" TextColor="Red" Margin="0,5,0,20"/>

        <Label Text="Calcium Ratio" FontSize="25" HorizontalOptions="Center" TextColor="White" />
    
        <Label Text="Total Serum Calcium" />
        <Entry x:Name="totLabel" Margin="0,5,0,0" TextChanged="RatioTextChanged"/>

        <Label Text="Serum albumin levels" Margin="0,10,0,0"/>
        <Entry x:Name="serLabel" Margin="0,5,0,0" TextChanged="RatioTextChanged"/>

        <Label Text="Patient iCal" Margin="0,10,0,0"/>
        <Entry x:Name="patLabel" Margin="0,5,0,0" TextChanged="RatioTextChanged"/>

        <Label Text="Calcium Ratio: -" x:Name="calcRatLabel" Margin="0,20,0,0" TextColor="LightBlue"/>
    
    </StackLayout>
</ContentPage>
