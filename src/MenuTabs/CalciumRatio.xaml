<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRRT_Calculator.CalciumRatio">
    <StackLayout Margin="20">

        <Label Text="*Only to be used in patients on citrate anticoagulation" HorizontalOptions="Center" TextColor="Red" Margin="0,5,0,20"/>

        <Label Text="Calcium Ratio" FontSize="25" HorizontalOptions="Center" />
    
        <Label Text="Total Serum Calcium" />
        <Entry x:Name="totLabel" BackgroundColor="LightGray" Margin="0,5,0,0" TextChanged="RatioTextChanged"/>

        <Label Text="Serum albumin levels" Margin="0,10,0,0"/>
        <Entry x:Name="serLabel" BackgroundColor="LightGray" Margin="0,5,0,0" TextChanged="RatioTextChanged"/>

        <Label Text="Patient iCal" Margin="0,10,0,0"/>
        <Entry x:Name="patLabel" BackgroundColor="LightGray" Margin="0,5,0,0" TextChanged="RatioTextChanged"/>

        <Label Text="Calcium Ratio: -" x:Name="calcRatLabel" Margin="0,20,0,0" TextColor="LightBlue"/>

        <Label x:Name="warningLabel" Text="Please fill in all fields." TextColor="Red" IsVisible="True" Margin="0,10,0,0"/>

    </StackLayout>
</ContentPage>
